import java.util.*;
class Main {
    
    static int isPrime(int n){
        
        if(n<=1){
            return 0;
        }
        
        for( int i =2;i*i<=n;i++)
        {
            if(n%i == 0){
                return 0;
            }
        }
        
        return 1;
    }
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter the number:");
        int num = sc.nextInt();
        int res = isPrime(num);
        
        if(res == 1){
             System.out.println("Prime Number");
        }
        else
        {
            System.out.println("Not a Prime Number");
        }
       
    }
}

//third approach

import java.util.*;
class Main {
    
    static boolean isPrime(int n){
        
        if(n==2 || n==3){
            return true;
        }
        
        if(n<=1 || n%2 ==0 || n%3==0){
            return false;
        }
        
        for(int i = 5;i*i <= n;i++){
            if(n%i==0 || n%(i+1) == 0){
                return false;
            }
        }
        
        return true;
    }
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter the number:");
        int num = sc.nextInt();
        
        if(isPrime(num)){
             System.out.println("Prime Number");
        }
        else
        {
            System.out.println("Not a Prime Number");
        }
       
    }
}
