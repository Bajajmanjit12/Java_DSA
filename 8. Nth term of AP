//Find the nth term of AP
import java.util.*;

class Main {
    
    static int findterm(int a1, int a2,int n){
        int diff = a2 - a1;
        int term = a2;
        for(int i = 2 ;i < n;i++)
        {
            term = term + diff;
        }
        return term;
    }
    public static void main(String[] args) {
        
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter the frist two term:");
        int a1 = sc.nextInt();
        int a2 = sc.nextInt();
        System.out.println("Enter the term you want to search:");
        int n = sc.nextInt();
        System.out.println("The " + n + " th term is " + findterm(a1,a2,n));
    }
}

//second approach using formula


class Solution {
    public static int nthTermOfAP(int a1, int a2, int n) {
       
        return a1 + ( n- 1) * (a2 - a1);
    }
}
